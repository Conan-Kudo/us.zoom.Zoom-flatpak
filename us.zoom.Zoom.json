{
    "app-id": "us.zoom.Zoom",
    "runtime": "org.freedesktop.Platform",
    "runtime-version": "19.08",
    "sdk": "org.freedesktop.Sdk",
    "command": "zoom",
    "separate-locales": false,
    "finish-args": [
        "--share=ipc",
        "--socket=x11",
        "--socket=pulseaudio",
        "--share=network",
        "--device=all",
        "--filesystem=~/Documents/Zoom:create",
        /* `--persist=.zoom` breaks screen sharing in Wayland, so giving rw access to ~/.zoom is used instead. If you don't want to screen share in Wayland or you use Xorg, feel free to override by running `flatpak override --persist=.zoom --nofilesystem=~/.zoom us.zoom.Zoom`. */
        "--filesystem=~/.zoom:create",
        /* */
        "--env=QT_QPA_PLATFORM=",
        "--own-name=org.kde.*",
        "--talk-name=org.gnome.Shell",
        "--persist=.config",
        "--persist=.cache",
        "--env=XDG_CURRENT_DESKTOP=GNOME"
    ],
    "modules": [
        {
            "name": "zoom",
            "buildsystem": "simple",
            "build-commands": [
                "install -Dm755 apply_extra /app/bin/apply_extra",
                "install -Dm644 us.zoom.Zoom.desktop /app/share/applications/us.zoom.Zoom.desktop",
                "install -Dm644 us.zoom.Zoom.appdata.xml /app/share/appdata/us.zoom.Zoom.appdata.xml",
                "install -Dm644 us.zoom.Zoom.64.png /app/share/icons/hicolor/64x64/apps/us.zoom.Zoom.png",
                "install -Dm644 us.zoom.Zoom.96.png /app/share/icons/hicolor/96x96/apps/us.zoom.Zoom.png",
                "install -Dm644 us.zoom.Zoom.128.png /app/share/icons/hicolor/128x128/apps/us.zoom.Zoom.png",
                "install -Dm644 us.zoom.Zoom.256.png /app/share/icons/hicolor/256x256/apps/us.zoom.Zoom.png",
                "install -Dm755 zoom.sh /app/bin/zoom"
            ],
            "sources": [
                {
                    "type": "script",
                    "dest-filename": "apply_extra",
                    "commands": [
                        "tar xf zoom.tar.xz --no-same-owner",
                        "rm -f zoom.tar.xz"
                    ]
                },
                {
                    "type": "script",
                    "dest-filename": "zoom.sh",
                    "commands": [
                        /* The commands below are required because Zoom hard codes ~/.config and ~/.cache instead of using XDG standards. Symlink errors are okay and won't harm. */
                        "ln -s ~/.var/app/us.zoom.Zoom/config/* ~/.var/app/us.zoom.Zoom/.config",
                        "ln -s ~/.var/app/us.zoom.Zoom/cache/* ~/.var/app/us.zoom.Zoom/.cache",
                        /* The command is used to automatically set `enableWaylandShare` to `true` when Zoom starts. */
                        "sed -i 's/enableWaylandShare\=false/enableWaylandShare\=true/' ~/.var/app/us.zoom.Zoom/config/zoomus.conf",
                        /* */
                        "exec env TMPDIR=$XDG_CACHE_HOME /app/extra/zoom/ZoomLauncher \"$@\""
                    ]
                },
                {
                    "type": "file",
                    "path": "us.zoom.Zoom.appdata.xml"
                },
                {
                    "type": "file",
                    "path": "us.zoom.Zoom.desktop"
                },
                {
                    "type": "file",
                    "path": "us.zoom.Zoom.64.png"
                },
                {
                    "type": "file",
                    "path": "us.zoom.Zoom.96.png"
                },
                {
                    "type": "file",
                    "path": "us.zoom.Zoom.128.png"
                },
                {
                    "type": "file",
                    "path": "us.zoom.Zoom.256.png"
                },
                {
                    "type": "extra-data",
                    "filename": "zoom.tar.xz",
                    "only-arches": [
                        "x86_64"
                    ],
                    "url": "https://d11yldzmag5yn.cloudfront.net/prod/5.3.469451.0927/zoom_x86_64.tar.xz",
                    "sha256": "5b81857c8d0e8f62d8edd1688b06758f38da8d0bb076f0c294e696f645976961",
                    "size": 40206068,
                    "x-checker-data": {
                        "type": "rotating-url",
                        "url": "https://zoom.us/client/latest/zoom_x86_64.tar.xz",
                        "pattern": "https://.*/prod/([^/]+)/zoom_x86_64.tar.xz"
                    }
                }
            ]
        }
    ]
}

